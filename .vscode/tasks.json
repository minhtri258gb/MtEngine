{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Main",
			"type": "shell",
			"command": "bin\\main.exe",
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "Meson Build",
			"type": "shell",
			"command": "meson",
			"args": [
				"compile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}/bin"
			},
			"problemMatcher": [],
			"presentation": {
				"clear": true
			}
		},
		{
			"label": "Meson Config",
			"type": "shell",
			"command": "meson",
			"args": [
				"setup",
				"bin"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"presentation": {
				"clear": true
			}
		}
	]
}